{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": ".",
    "paths": {
      "@components/*": ["components/*"],
      "@components/*/": ["components/*/"],
      "@const/*": ["const/*"],
      "@util/*": ["util/*"],
      "@lib/*": ["lib/*"],
      "@pages/*": ["pages/*"],
      "@styles/*": ["styles/*"],
    },
    "typeRoots": ["./node_modules/@types", "./types"],
  },
  "include": ["next-env.d.ts", "next-auth.d.ts", "**/*.ts", "**/*.tsx", "pages/test.jsx", "lib/db.js"],
  "exclude": ["node_modules"]
}
